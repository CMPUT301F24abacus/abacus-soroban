<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with Material3 and your background image. -->
    <style name="Base.Theme.Soroban" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set a custom background -->
        <item name="android:windowBackground">@drawable/background_drawable</item>

        <!-- Customize theme colors -->
        <item name="colorPrimary">#044389</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Customize text colors -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
    </style>

    <!-- Inherit from the base theme -->
    <style name="Theme.Soroban" parent="Base.Theme.Soroban" />

    <!-- Button Style -->
    <style name="AppButton">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <!-- List View Style -->
    <style name="AppListView">
        <item name="android:divider">#DDDDDD</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#33334F</item>
    </style>

    <!-- Dashboard Card Style -->
    <style name="DashboardCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#444466</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:elevation">4dp</item>
    </style>

    <style name="ThemeOverlay.Soroban.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

