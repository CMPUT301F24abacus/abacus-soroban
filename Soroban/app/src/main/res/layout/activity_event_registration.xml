<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_event_registration.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title for Event Registration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register for Event"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Event Details Placeholder -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details: Event Name, Organizer, Time, etc."
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!-- Register Button to go to QR Code Scan -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A1CDA8"
        android:text="Register"
        android:textColor="#000000"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_unregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFCDD2"
        android:text="Unregister"
        android:textColor="#000000"
        android:visibility="gone" />

</LinearLayout>
