<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_create_event.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/moon"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Create Event"
        android:titleTextColor="#FFFFFF"/>

    <!-- Event Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Event Name"
        android:textColor="@color/color_registration_open"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter event name"
        android:inputType="text"
        android:textColor="@color/background_light" />

    <!-- Event Date Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Event Date"
        android:textColor="@color/color_registration_open"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eventDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter event date (e.g., Jan 1, 2024)"
        android:inputType="text"
        android:textColor="@color/background_light" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/notification_positive_background"
        android:text="Save Event"
        android:textColor="#FFFFFF" />

    <!-- Generate QR Code Button -->
    <Button
        android:id="@+id/generateQrCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/notification_positive_background"
        android:text="Generate QR Code"
        android:textColor="#FFFFFF" />

    <!-- QR Code Label -->
    <TextView
        android:id="@+id/qrCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="QR Code"
        android:textColor="@color/color_registration_open"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- QR Code Image -->
    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />
</LinearLayout>
