<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Event Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buttonScanQRCode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_qr_code" />

        <ImageButton
            android:id="@+id/buttonEventGeolocation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_paragraph" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventPosterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poster:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eventPosterImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/eventAutoReplaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrant Limit:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventEntrantLimitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None / Number"
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/eventAutoReplaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geological Requirement:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/eventAutoReplaceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventAutoReplaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic Replacement:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/eventAutoReplaceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonViewEntrants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:text="View Entrants" />

        <Button
            android:id="@+id/buttonEditEventDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Details" />
    </LinearLayout>

</LinearLayout>